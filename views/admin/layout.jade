doctype html
html
  head
    block title
    != css('style')
  body
    #page
      #page-top.container.clearfix
        #pre-header
        header#header.clearfix(role="banner")
          hgroup#logo-wrapper
            h1
              a#logo(href='/')
                img(src="/images/logo.png", width="250", height="30")
          #navigation-wrapper.clearfix
            nav#main-navigation.main-menu
              ul#menu-top-menu.sf-menu
                li.menu-item
                  a(href="/admin")= label('Posts')
                li.menu-item
                  a(href="/admin/new")= label('New Post')
                li.menu-item
                  a(href="/admin/logout")= label('Log out')
      #content.container.clearfix
        .container.clearfix
          - var successMsgs = success()
          - if (successMsgs)
            #success.successbox
              =successMsgs
          - var errorMsgs = errors()
          - if (errorMsgs)
            #errors.cancelbox
              =errorMsgs
          block content

    != js('script')
